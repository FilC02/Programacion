package interface_puertiventana;

public class P1 extends Entrances implements Iwiring{
	public boolean apertura = false;
	
	public P1() {
		super();
		// TODO Auto-generated constructor stub
	}
	
	public void abrir() {
		
		System.out.println("Abriendo/cerrando puerta 1"); //Placeholder useless
		super.aperturar =! super.aperturar;
		
	}
	
	public void auto_close() {
		System.out.println("Performing action 1");
		apertura = true;
		//Placeholder
	}
	
	@Override
	public void estado() {
		if (apertura = false) {
			System.out.println(" P1 Abierta"); }
		else {
			System.out.println("P1 Cerrada");
		}
	}
	
	public void comprobar() {
		if (apertura = false) {
			System.out.println("La puerta 1 esta cerrada");
			
		}
		if (apertura = true) {
			System.out.println("La puerta 1 esta abierta");
		}
	}
	
}
