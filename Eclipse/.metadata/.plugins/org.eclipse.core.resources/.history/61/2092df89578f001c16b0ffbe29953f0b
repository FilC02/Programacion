package interface_puertiventana;

public class J4 implements Iwiring {
	
	private boolean apertura = false;
	
	public J4() {
		super();
		// TODO Auto-generated constructor stub
	}
	
	public void abrir() {
		System.out.println("Abriendo/cerrando puerta 4"); //Placeholder useless
		apertura =! apertura;
	}
	
	public void auto_close() {
		System.out.println("Performing action 4"); //Placeholder
		super.apertura =! super.apertura;
	}
	
	public void estado() {
		if (super.apertura = true)
			System.out.println("J4 Abierto");
		else
			System.out.println("J4 Cerrado");
	}

}
